<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/audio_layout"/>

    <EditText
        android:id="@+id/urlEt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rv"
        android:text="Введите Url аудио файла"/>
    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/urlEt"
        android:text="Add" />
    <Button
        android:layout_below="@+id/addButton"
        android:id="@+id/button_start_recording"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Start"/>

    <Button
        android:layout_marginRight="50dp"
        android:id="@+id/button_stop_recording"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Stop"
        android:layout_below="@+id/button_start_recording"/>
</RelativeLayout>